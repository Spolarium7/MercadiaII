@model GoshenJimenez.MercadiaII.Web.ViewModels.Account.VerifyViewModel
@{
    ViewData["Title"] = "Verify";
    Layout = "~/views/shared/_publiclayout.cshtml";
}

<h2>Verify</h2>

<div class="row">
    <div class="col-md-6">
        <form action="~/account/verify" method="post">
            @Html.ValidationSummary()
            <div class="form-group">
                <label for="EmailAddress">EmailAddress:</label>
                <input type="email" class="form-control" name="EmailAddress" />
            </div>
            <div class="form-group">
                <label for="RegistrationCode">Registration Code:</label>
                <input type="password" class="form-control" name="RegistrationCode" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
        </form>
    </div>
</div> 